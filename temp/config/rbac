# Role-Based Access Control (RBAC) Configuration for Service Router Operator

# Role Definition
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  namespace: default
  name: service-router-operator-role
rules:
  - apiGroups: ["servicerouter.example.com"] # Replace with your actual API group
    resources: ["servicerouters", "servicerouters/status", "servicerouters/finalizers"]
    verbs: ["get", "list", "watch", "create", "update", "patch", "delete"]

# Role Binding
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: service-router-operator-role-binding
  namespace: default
subjects:
  - kind: ServiceAccount
    name: service-router-operator-sa
    namespace: default
roleRef:
  kind: Role
  name: service-router-operator-role
  apiGroup: rbac.authorization.k8s.io

# Service Account
apiVersion: v1
kind: ServiceAccount
metadata:
  name: service-router-operator-sa
  namespace: default