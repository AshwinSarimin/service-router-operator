apiVersion: v1
kind: ServiceRouter
metadata:
  name: example-servicerouter
spec:
  # Define the desired state of the ServiceRouter resource here
  # For example:
  replicas: 3
  serviceType: LoadBalancer
  routes:
    - path: /example
      method: GET
      serviceName: example-service
      servicePort: 80

---

apiVersion: v1
kind: ServiceRouter
metadata:
  name: another-servicerouter
spec:
  # Another example of a ServiceRouter resource
  replicas: 1
  serviceType: ClusterIP
  routes:
    - path: /another
      method: POST
      serviceName: another-service
      servicePort: 8080