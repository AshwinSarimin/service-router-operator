apiVersion: apps/v1
kind: Deployment
metadata:
  name: service-router-operator
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: service-router-operator
  template:
    metadata:
      labels:
        app: service-router-operator
    spec:
      containers:
        - name: service-router-operator
          image: <your-acr-name>.azurecr.io/service-router-operator:latest
          ports:
            - containerPort: 8080
          env:
            - name: WATCH_NAMESPACE
              value: ""
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: POD_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
---
apiVersion: v1
kind: Service
metadata:
  name: service-router-operator
  namespace: default
spec:
  ports:
    - port: 8080
      targetPort: 8080
  selector:
    app: service-router-operator
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: service-router-operator
rules:
  - apiGroups: [""]
    resources: ["pods", "pods/status", "pods/finalizers"]
    verbs: ["get", "list", "watch", "create", "update", "patch", "delete"]
  - apiGroups: ["apps"]
    resources: ["deployments", "deployments/status"]
    verbs: ["get", "list", "watch", "create", "update", "patch", "delete"]
  - apiGroups: ["servicerouter.example.com"]
    resources: ["servicerouters", "servicerouters/status", "servicerouters/finalizers"]
    verbs: ["get", "list", "watch", "create", "update", "patch", "delete"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: service-router-operator
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: service-router-operator
subjects:
  - kind: ServiceAccount
    name: default
    namespace: default
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: service-router-operator
  namespace: default